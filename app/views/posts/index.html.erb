index.html.erb

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Posts</th>
      <th>User</th>
      <th>Title</th>
      <th> Created Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.body %></td>
        <td><%= p.user.username %></td>
        <td><%= p.title %></td>
        <td><%= p.created_at.to_date.strftime("%m/%d/%Y") %></td>

        <td><%= link_to 'Show', p %></td>
        <td><%= link_to 'Edit', edit_post_path(p) %></td>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<br>
<%= link_to 'All Users', users_path %>
<br>
<%= link_to 'Home', home_path %>
